<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="@dimen/title_szie"
        android:textColor="@color/text_color"
        android:text="-2018年5月-"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/white"
        tl:tl_indicator_color="@color/colorAccent"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/text_color"
        tl:tl_textUnselectColor="@color/text_color"
        tl:tl_textsize="@dimen/text_main" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#EFEFEF" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_baby_grpwth_cycle"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>