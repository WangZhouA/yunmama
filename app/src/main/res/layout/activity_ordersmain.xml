<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">



    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slid_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/white"
        tl:tl_indicator_color="@color/style_red"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/style_red"
        tl:tl_textUnselectColor="@color/text_color"
        tl:tl_textsize="@dimen/text_main" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slid_layout"/>

</RelativeLayout>