<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <com.saiyi.pregnantmother.common.view.ViewPagerSlide
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_ll" />

    <LinearLayout
        android:id="@+id/menu_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.saiyi.pregnantmother.common.view.CheckImageView
                    android:layout_width="48dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_home_build_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/home"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.saiyi.pregnantmother.common.view.CheckImageView
                    android:layout_width="48dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_consultation_build_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/consultation"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="34dp"
                    android:src="@drawable/add"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.saiyi.pregnantmother.common.view.CheckImageView
                    android:layout_width="48dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_data_build_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/data"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.saiyi.pregnantmother.common.view.CheckImageView
                    android:layout_width="48dp"
                    android:layout_height="34dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tab_my_build_drawable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/my"
                    android:textColor="@drawable/tab_text_color"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
