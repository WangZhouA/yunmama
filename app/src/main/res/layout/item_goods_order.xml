<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/iv_orders_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/test_ad1" />

    <TextView
        android:id="@+id/tv_orders_goods"
        style="@style/text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_orders_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_orders_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="胎儿心率仪无辐射多普勒..." />
    
    <TextView
        android:id="@+id/tv_orders_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:text="¥78.00"
        android:textColor="@color/style_red"
        android:textSize="@dimen/text_small" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_orders_goods"
        android:layout_toRightOf="@id/iv_orders_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_orders_deatils"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:text="数字显示+电池1对（樱花粉）"
            android:textColor="@color/title_text_color1"
            android:textSize="@dimen/text_main" />

        <TextView
            android:id="@+id/tv_orders_buynumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×2"
            android:textColor="@color/hint_text_color"
            android:textSize="@dimen/text_main" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_bg" />
</RelativeLayout>