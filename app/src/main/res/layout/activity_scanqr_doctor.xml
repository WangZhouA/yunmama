<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:qrcv_barcodeRectHeight="120dp"
        app:qrcv_cornerColor="@color/style_blue"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_qrCodeTipText="@string/scan_qr_doctor"
        app:qrcv_rectWidth="259dp"
        app:qrcv_scanLineColor="@color/style_blue"
        app:qrcv_scanLineSize="0.5dp"
        app:qrcv_tipTextColor="@color/white"
        app:qrcv_tipTextSize="13dp"
        app:qrcv_toolbarHeight="@dimen/navigationbar_height"
        app:qrcv_topOffset="56dp" />

</RelativeLayout>
