<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sunday.common.activity.view.NavBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:backgroundColor="@color/white"
        app:rightTextSize="16dp"
        app:rightTxtColor="#FFF"
        app:titleColor="@color/title_text_color"
        app:titleSize="18dp" />
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:layout_above="@+id/tv_tips"
                android:src="@drawable/yisheng_w"/>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tips_not_doctor"
                android:textColor="@color/title_text_color1"
                android:textSize="@dimen/text_middle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_tips"
                android:layout_centerInParent="true"
                android:text="@string/click_add"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/text_small"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>