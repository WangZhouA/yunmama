<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_shape_bg"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/for_tv_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:text="@string/tishi"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/text_for_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/hong"
            android:text="ï¿¥20.00"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setTimeDuan"
            android:textColor="#999999"
            android:layout_marginLeft="20dp"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/rl_O"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/et_bg"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/im_O"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                   android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/O"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_T"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/et_bg"
                android:layout_weight="1"

                >

                <ImageView
                    android:id="@+id/im_T"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/T"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/rl_TH"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/et_bg"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/im_TH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                   android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/TH"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_F"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/et_bg"
                android:layout_weight="1"

                >

                <ImageView
                    android:id="@+id/im_F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/F"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/rl_FI"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/et_bg"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/im_FI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                   android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/FI"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="13dp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_S"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/et_bg"
                android:layout_weight="1"

                >

                <ImageView
                    android:id="@+id/im_S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xuanzhong00"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/S"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

        </LinearLayout>


        <View

            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#CDCDCD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_no_xian_ss"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#242424"

                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#CDCDCD"

                />

            <Button
                android:id="@+id/btn_yes_xiaxian_ss"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/lijiyuyue"
                android:textColor="@color/style_blue"

                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
